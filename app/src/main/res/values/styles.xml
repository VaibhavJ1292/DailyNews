<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--style for toolbar-->
    <style name="toolbar_title">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/text_white_75</item>
    </style>


    <style name="BottomNavigation">
        <item name="itemIconTint">@drawable/navigation_item_selector</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemTextColor">@android:color/transparent</item>

    </style>
</resources>
